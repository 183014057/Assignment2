<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsACtivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

        <ImageView
            android:id="@+id/moviePoster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/The_Flash" />

        <ImageView
            android:id="@+id/mainCharacter"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/Flash_DP"/>

        <TextView
            android:id="@+id/movieRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="230dp"
            android:text="★★★★☆"
            android:textColor="#FFFFC107"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/movieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="160dp"
            android:text="The Flash"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/moviePlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:text="After being struck by lighting ,Barry Allen wakes up from his coma to discover he's been given the power of super speed,becoming the Flash,fighting crime in Cental City."
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/actorRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/actorName"
            android:layout_width="200dp"
            android:layout_height="45dp"/>

        <ImageView
            android:id="@+id/actorPic"
            android:layout_width="180dp"
            android:layout_height="180dp"/>
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>